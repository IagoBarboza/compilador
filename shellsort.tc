fun void shellsort(int vet[], int size){
var int i;
var int j;
var int value;
var int gap = 1;

while(gap > 1){
gap =  3 * gap + 1;
}

while(gap > 1){
gap = gap / 3;
for(i in gap to size){
value = vet[i];
j = i;
while(j >= gap && value < vet[j - gap]){
vet[j] = vet[j - gap];
j = j - gap;
}
vet[j] = value;
}
}

}

